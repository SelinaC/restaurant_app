!!!
%html
  %head
    %title CookedUp!
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Volkhov:300,400,700", :rel => "stylesheet", :type => "text/css"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .user-nav
      .nav-logo
        = link_to image_tag("/assets/cookedup.png"), root_path
      .nav-links
        - if user_signed_in?
          = form_tag searches_path do
            = label_tag :search
            = text_field_tag :query
            = button_tag do
              = image_tag "/assets/search-button-without-text.svg", width: 30
        %br
        .nav-links
          - if user_signed_in?
            = link_to "Your Profile", current_user
            = link_to 'Logout',  destroy_user_session_path, method: :delete
          - else
            = link_to 'Sign up', new_user_registration_path
            = link_to 'Login', new_user_session_path
          %br
          - if user_signed_in?
            = link_to "Browse Restaurants", restaurants_path
            = link_to "See the Professionals", users_path
            #main
          \#{yield}
