/ = @restaurants.count.to_s + " Restaurants"

.container
  .row
    .col-md-4
    .col-md-8
      .link-see-others
        %h4 Restaurants
        = will_paginate @restaurants
      %p
  .row
    .col-md-4
    .col-md-8.row-block
      - @restaurants.each do |rest|
        .row.row-break
          .col-md-5.user-img
            %p= image_tag rest.image_url(:thumb)
          .col-md-5
            %h4= link_to(rest.name, restaurant_path(rest))
            %p= rest.town
            %p= rest.postcode
            %p= rest.cuisine
          .col-md-2
            .img-fhrs
              %img{src: @fhrs_image}
            .hide
              %p= rest.hygiene_rating
        .hide
          %p= rest.id

  %p
