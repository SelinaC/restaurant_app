/ = @restaurants.count.to_s + " Restaurants"

- if user_signed_in?
  .container
    .row
      .col-md-4
      .col-md-8
        .link-see-others
          .upcase
            %h4 Restaurants
          = will_paginate @restaurants
        %p
    .row
      .col-md-4
      .col-md-8.row-block
        - @restaurants.each do |rest|
          .row.row-break
            .col-md-5.user-img
              %p= image_tag rest.image_url(:thumb)
            .col-md-5
              %h4= link_to(rest.name, restaurant_path(rest))
              %p= rest.town
              %p= rest.postcode
              %p= rest.cuisine
            .col-md-2
              .img-fhrs
                %img{src: @fhrs_image}
              .hide
                = rest.hygiene_rating
              - if user_signed_in?
                - if current_user.has_role?('admin')
                  = link_to("Edit", edit_restaurant_path(rest))
          .hide
            = rest.id


  %p
